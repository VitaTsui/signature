{
  "name": "@hsu-react/signature",
  "version": "0.0.1",
  "description": "A React Signature Component",
  "license": "MIT",
  "repository": "git@github.com:VitaTsui/signature.git",
  "author": "VitaHsu <vitahsu7@gmail.com>",
  "main": "lib/index.js",
  "module": "es/index.js",
  "unpkg": "dist/signature.min.js",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "es",
    "lib",
    "dist",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "es/*",
    "lib/*",
    "dist/*"
  ],
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "Firefox ESR",
    "IE 11",
    "not IE 10"
  ],
  "scripts": {
    "build": "yarn build:umd && yarn build:es && yarn build:cjs && yarn build:gulp",
    "build:umd": "rimraf dist && yarn build:dev && yarn build:prod",
    "build:es": "rimraf es && tsc -p build/tsconfig/tsconfig.es.json && yarn rename es",
    "build:cjs": "rimraf lib && tsc -p build/tsconfig/tsconfig.cjs.json && yarn rename lib",
    "build:gulp": "cd build && gulp",
    "build:dev": "cross-env NODE_ENV=development webpack --config build/webpack.config.cjs",
    "build:prod": "cross-env NODE_ENV=production webpack --config build/webpack.config.cjs",
    "rename": "cd scripts && node rename.js",
    "clear": "rimraf lib && rimraf es && rimraf dist",
    "test": "jest",
    "publish:patch": "yarn build && yarn publish --new-version patch",
    "publish:minor": "yarn build && yarn publish --new-version minor",
    "publish:major": "yarn build && yarn publish --new-version major",
    "publish:alpha": "yarn build && yarn publish --tag alpha"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.5.2",
    "@types/react": "^18.2.13",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.10.0",
    "css-minimizer-webpack-plugin": "^6.0.0",
    "eslint": "^8.46.0",
    "eslint-plugin-react": "^7.33.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "file-save": "^0.2.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^9.0.0",
    "gulp-cssnano": "^2.1.3",
    "gulp-sass": "^5.1.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jsdom": "^22.1.0",
    "mini-css-extract-plugin": "^2.8.1",
    "postcss-loader": "^8.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^5.0.1",
    "sass": "^1.72.0",
    "sass-loader": "^14.1.1",
    "terser-webpack-plugin": "^5.3.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  }
}
